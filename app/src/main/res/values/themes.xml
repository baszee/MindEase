    <style name="Theme.MindEaseApp" parent="Theme.MindEase.Indigo" />

    <style name="Theme.MindEaseApp.NoActionBar" parent="Base.Theme.MindEaseApp" />

    <style name="Theme.MindEaseApp.Fullscreen" parent="Theme.MindEaseApp">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <style name="Widget.MindEaseApp.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="hintTextColor">?attr/colorPrimary</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="Widget.MindEaseApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Widget.MindEaseApp.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="Widget.MindEaseApp.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
    </style>

    <style name="Widget.MindEaseApp.Toolbar" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="titleTextColor">?attr/colorOnSurface</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Widget.MindEaseApp.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">?attr/colorPrimary</item>
        <item name="itemTextColor">?attr/colorPrimary</item>
        <item name="android:elevation">8dp</item>
