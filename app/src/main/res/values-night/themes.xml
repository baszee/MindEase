<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.MindEaseApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/mindease_primary</item>
        <item name="colorPrimaryVariant">@color/mindease_primary</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <item name="colorSecondary">@color/mindease_secondary</item>
        <item name="colorSecondaryVariant">@color/mindease_secondary</item>
        <item name="colorOnSecondary">#000000</item>

        <item name="android:colorBackground">#121212</item> <item name="colorOnBackground">#FFFFFF</item> <item name="colorSurface">#1D1D1D</item> <item name="colorOnSurface">#FFFFFF</item> <item name="android:statusBarColor">@color/mindease_primary</item>
