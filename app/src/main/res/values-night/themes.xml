    <style name="Theme.MindEaseApp" parent="Base.Theme.MindEaseApp" />

    <style name="Theme.MindEaseApp.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorBackground">#121212</item>
        <item name="colorSurface">#1D1D1D</item>
