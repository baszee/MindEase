<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/android:colorBackground"
    tools:context=".ui.breathing.BreathingFragment">

    <TextView
        android:id="@+id/tv_breathing_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/breathing_exercise"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:paddingHorizontal="20dp"
        android:paddingTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_breathing_subheader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Choose breathing exercises that suit your needs."
        android:textSize="16sp"
        android:textColor="?attr/colorOnSurface"
        android:alpha="0.7"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_breathing_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_breathing_subheader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="40dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_box_breathing"
                style="@style/BreathingCardStyle"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_breathing_box"
                        android:contentDescription="@string/breathing_box_title"
                        android:layout_marginEnd="20dp" app:tint="?attr/colorOnSurface" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/BreathingTitleStyle"
                            android:text="@string/breathing_box_title" />

                        <TextView
                            style="@style/BreathingDescStyle"
                            android:text="@string/breathing_box_desc" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_cyclic_sighing"
                style="@style/BreathingCardStyle"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_breathing_cyclic"
                        android:contentDescription="@string/breathing_cyclic_title"
                        android:layout_marginEnd="20dp" app:tint="?attr/colorOnSurface" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/BreathingTitleStyle"
                            android:text="@string/breathing_cyclic_title" />

                        <TextView
                            style="@style/BreathingDescStyle"
                            android:text="@string/breathing_cyclic_desc" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_478_breathing"
                style="@style/BreathingCardStyle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_breathing_sleep2"
                        android:contentDescription="@string/breathing_478_title"
                        android:layout_marginEnd="20dp" app:tint="?attr/colorOnSurface" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/BreathingTitleStyle"
                            android:text="@string/breathing_478_title" />

                        <TextView
                            style="@style/BreathingDescStyle"
                            android:text="@string/breathing_478_desc" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>