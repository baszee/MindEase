<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/android:colorBackground"
    tools:context=".ui.breathing.BreathingFragment">

    <TextView
        android:id="@+id/tv_breathing_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Breathing Exercise"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:paddingHorizontal="20dp"
        android:paddingTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_breathing_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="40dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_box_breathing"
                style="@style/BreathingCardStyle"
                app:layout_constraintTop_toTopOf="parent">
                <LinearLayout style="@style/BreathingContentStyle">
                    <TextView style="@style/BreathingTitleStyle" android:text="Box Breathing (4-4-4-4)"/>
                    <TextView style="@style/BreathingDescStyle" android:text="Balanced calm for focus"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_cyclic_sighing"
                style="@style/BreathingCardStyle">
                <LinearLayout style="@style/BreathingContentStyle">
                    <TextView style="@style/BreathingTitleStyle" android:text="Cyclic Sighing"/>
                    <TextView style="@style/BreathingDescStyle" android:text="Quick relief for anxiety"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_478_breathing"
                style="@style/BreathingCardStyle">
                <LinearLayout style="@style/BreathingContentStyle">
                    <TextView style="@style/BreathingTitleStyle" android:text="4-7-8 Breathing"/>
                    <TextView style="@style/BreathingDescStyle" android:text="Wind down for sleep"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>