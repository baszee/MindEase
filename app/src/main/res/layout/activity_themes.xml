<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/android:colorBackground"
    android:fitsSystemWindows="true"
    tools:context=".ui.profile.ThemesActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:title="Themes"
        app:titleTextColor="?attr/colorOnSurface"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="?attr/colorOnSurface"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PILIH TEMA APLIKASI"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:textColor="?attr/colorPrimary"/>

        <TextView
            android:id="@+id/tv_theme_light"
            style="@style/ThemeOptionStyle"
            android:text="Light Theme (Terang)" />

        <TextView
            android:id="@+id/tv_theme_dark"
            style="@style/ThemeOptionStyle"
            android:text="Dark Theme (Gelap)" />

        <TextView
            android:id="@+id/tv_theme_system"
            style="@style/ThemeOptionStyle"
            android:text="System Default (Ikuti Sistem)" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>