<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/android:colorBackground"
    android:fitsSystemWindows="true"
    tools:context=".ui.profile.SettingsActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/settings"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AKUN &amp; KEAMANAN"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_edit_profile"
                style="@style/SettingsItemStyle"
                android:drawableStart="@drawable/ic_nav_profile"
                android:text="@string/edit_profile"
                app:drawableEndCompat="@drawable/ic_arrow_forward" />

            <TextView
                android:id="@+id/tv_change_password"
                style="@style/SettingsItemStyle"
                android:drawableStart="@drawable/ic_key"
                android:text="@string/change_password"
                app:drawableEndCompat="@drawable/ic_arrow_forward" />

            <TextView
                android:id="@+id/tv_delete_account"
                style="@style/SettingsItemStyle"
                android:textColor="@color/mood_very_sad"
                android:drawableStart="@drawable/ic_delete"
                android:text="Hapus Akun Permanen"
                app:drawableEndCompat="@drawable/ic_arrow_forward" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="?attr/colorOnSurface" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TAMPILAN &amp; FUNGSI"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_themes"
                style="@style/SettingsItemStyle"
                android:drawableStart="@drawable/ic_theme"
                android:text="Tema"
                app:drawableEndCompat="@drawable/ic_arrow_forward" />

            <TextView
                android:id="@+id/tv_language"
                style="@style/SettingsItemStyle"
                android:drawableStart="@drawable/ic_key"
                android:text="Bahasa"
                app:drawableEndCompat="@drawable/ic_arrow_forward" />

            <TextView
                android:id="@+id/tv_notifications"
                style="@style/SettingsItemStyle"
                android:drawableStart="@drawable/ic_info"
                android:text="Notifikasi"
                app:drawableEndCompat="@drawable/ic_arrow_forward" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="?attr/colorOnSurface" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LAINNYA &amp; LEGAL"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_terms_and_conditions"
                style="@style/SettingsItemStyle"
                android:drawableStart="@drawable/ic_key"
                android:text="@string/terms_of_service"
                app:drawableEndCompat="@drawable/ic_arrow_forward" />


            <TextView
                android:id="@+id/tv_privacy_policy"
                style="@style/SettingsItemStyle"
                android:drawableStart="@drawable/ic_privacy"
                android:text="@string/privacy_policy"
                app:drawableEndCompat="@drawable/ic_arrow_forward" />

            <TextView
                android:id="@+id/tv_about_app"
                style="@style/SettingsItemStyle"
                android:drawableStart="@drawable/ic_info"
                android:text="@string/about"
                app:drawableEndCompat="@drawable/ic_arrow_forward" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>