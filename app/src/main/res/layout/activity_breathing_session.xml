<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/android:colorBackground"
    android:fitsSystemWindows="true"
    tools:context=".ui.breathing.BreathingSessionActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:title="Breathing Session"
        app:titleTextColor="?attr/colorOnSurface"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="?attr/colorOnSurface"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/animation_container"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/breathing_shape"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_breathing_rounded_box"
            android:scaleX="1.0"
            android:scaleY="1.0"
            android:contentDescription="Breathing Shape"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/tv_timer_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="48sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            tools:text="4"/>

        <TextView
            android:id="@+id/tv_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ready? Inhale..."
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="16dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"/>

        <TextView
            android:id="@+id/tv_cycle_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cycle 1/10"
            android:layout_gravity="top|end"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/tv_cycle_top"
            style="@style/CycleTextStyle"
            android:text="Inhale 4s →"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="80dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:textColor="?attr/colorOnSurface"/>

        <TextView
            android:id="@+id/tv_cycle_left"
            style="@style/CycleTextStyle"
            android:text="↑ Hold 4s"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="40dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:textColor="?attr/colorOnSurface"/>

        <TextView
            android:id="@+id/tv_cycle_right"
            style="@style/CycleTextStyle"
            android:text="↓ Hold 4s"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="40dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:textColor="?attr/colorOnSurface"/>

        <TextView
            android:id="@+id/tv_cycle_bottom"
            style="@style/CycleTextStyle"
            android:text="← Exhale 4s"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="80dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:textColor="?attr/colorOnSurface"/>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/session_controls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/layout_duration_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Session Duration:"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginEnd="16dp"/>

            <ImageButton
                android:id="@+id/btn_duration_minus"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_remove"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Decrease Duration"
                android:tint="?attr/colorPrimary"/>

            <TextView
                android:id="@+id/tv_session_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="75dp"
                android:gravity="center"
                android:text="0.30"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:paddingHorizontal="8dp"/>

            <ImageButton
                android:id="@+id/btn_duration_plus"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_add"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Increase Duration"
                android:tint="?attr/colorPrimary"/>

        </LinearLayout>


        <Button
            android:id="@+id/btn_start_session"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Session"
            style="@style/Widget.MindEaseApp.Button"
            android:textSize="18sp"
            android:paddingVertical="12dp"
            android:layout_marginBottom="16dp"/>

        <Switch
            android:id="@+id/switch_sound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sound Guidance"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="8dp"
            android:checked="true"/>

        <Switch
            android:id="@+id/switch_haptic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Haptic Feedback"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface"
            android:checked="false"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>