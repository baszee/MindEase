<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/android:colorBackground"
    android:fitsSystemWindows="true"
    tools:context=".ui.breathing.BreathingSessionActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:title="@string/breathing_exercise"
        app:titleTextColor="?attr/colorOnSurface"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="?attr/colorOnSurface"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/animation_container"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Text Panah Top (Inhale) -->
        <TextView
            android:id="@+id/tv_cycle_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inhale 4s →"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="32dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:textColor="?attr/colorOnSurface"
            android:textSize="20sp"
            android:textStyle="bold"
            android:alpha="0.4"/>

        <!-- Box Breathing: Custom Progress Box View -->
        <com.mindease.mindeaseapp.ui.breathing.ProgressBoxView
            android:id="@+id/breathing_progress_box"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:visibility="gone"
            tools:visibility="visible"/>

        <!-- 4-7-8 Breathing: Custom Progress Triangle View -->
        <com.mindease.mindeaseapp.ui.breathing.ProgressTriangleView
            android:id="@+id/breathing_progress_triangle"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <!-- Cyclic Sighing: Fixed Circle Container dengan Icon (DIPERBESAR) -->
        <FrameLayout
            android:id="@+id/cyclic_circle_container"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_breathing_circle"
            android:visibility="gone">

            <!-- Icon Paru-paru (diperbesar: 130dp, scale 0.7 → 1.3) -->
            <ImageView
                android:id="@+id/cyclic_lungs_icon"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_lungs2"
                android:contentDescription="Lungs Icon"
                android:scaleType="fitCenter"/>
        </FrameLayout>

        <!-- Countdown Timer (di tengah) -->
        <TextView
            android:id="@+id/tv_timer_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="48sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:visibility="visible"
            tools:text="4"/>

        <TextView
            android:id="@+id/tv_cycle_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="↑ Hold 4s"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="12dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:textColor="?attr/colorOnSurface"
            android:textSize="20sp"
            android:textStyle="bold"
            android:alpha="0.4"/>

        <TextView
            android:id="@+id/tv_cycle_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hold 4s ↓"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="12dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:textColor="?attr/colorOnSurface"
            android:textSize="20sp"
            android:textStyle="bold"
            android:alpha="0.4"/>

        <!-- Text Panah Bottom (untuk 4-7-8: Hold) -->
        <TextView
            android:id="@+id/tv_cycle_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← Exhale 4s"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:textColor="?attr/colorOnSurface"
            android:textSize="20sp"
            android:textStyle="bold"
            android:alpha="0.4"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ready_inhale"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/animation_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Inhale"/>

    <TextView
        android:id="@+id/tv_cycle_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cycle 1/5"
        android:textSize="16sp"
        android:textColor="?attr/colorOnSurface"
        android:alpha="0.7"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_instruction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Cycle 1/2"/>

    <LinearLayout
        android:id="@+id/session_controls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/layout_duration_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/session_duration_label"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginEnd="16dp"/>

            <ImageButton
                android:id="@+id/btn_duration_minus"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_remove"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/breathing_duration"
                android:tint="?attr/colorPrimary"/>

            <TextView
                android:id="@+id/tv_session_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="75dp"
                android:gravity="center"
                tools:text="0.30"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:paddingHorizontal="8dp"/>

            <ImageButton
                android:id="@+id/btn_duration_plus"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_add"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/breathing_duration"
                android:tint="?attr/colorPrimary"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_start_session"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_breathing"
            style="@style/Widget.MindEaseApp.Button"
            android:textSize="18sp"
            android:paddingVertical="12dp"
            android:layout_marginBottom="16dp"/>

        <Switch
            android:id="@+id/switch_sound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sound_guidance"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="8dp"
            android:checked="true"/>

        <Switch
            android:id="@+id/switch_haptic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/haptic_feedback"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface"
            android:checked="false"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>