<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/android:colorBackground"
    android:paddingHorizontal="20dp"
    android:paddingTop="48dp"
    tools:context=".ui.profile.ProfileFragment">

    <TextView
        android:id="@+id/tv_profile_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/profile"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_profile_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="40dp"
            android:gravity="center_horizontal">

            <!-- ðŸ”¥ BARU: Verification Warning Banner -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/verification_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFF3E0"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/verification_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="âš ï¸ Email Belum Diverifikasi"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#E65100"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/verification_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Verifikasi email untuk keamanan akun Anda"
                        android:textSize="12sp"
                        android:textColor="#5D4037"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end">

                        <Button
                            android:id="@+id/btn_verify_later"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Nanti Saja"
                            android:textSize="12sp"
                            android:textColor="#5D4037"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_marginEnd="8dp"/>

                        <Button
                            android:id="@+id/btn_verify_now"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Verifikasi Sekarang"
                            android:textSize="12sp"
                            android:backgroundTint="#FF6F00"
                            style="@style/Widget.MaterialComponents.Button"/>

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:id="@+id/iv_profile_picture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_profile_placeholder"
                android:background="@drawable/bg_breathing_circle"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:contentDescription="Profile Picture" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                tools:text="aje gile" />

            <TextView
                android:id="@+id/tv_user_bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:alpha="0.7"
                android:layout_marginBottom="16dp"
                tools:text="awowakokwaokwa" />

            <TextView
                android:id="@+id/tv_user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:alpha="0.5"
                tools:text="baszegaming@gmail.com" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:background="?attr/colorOnSurface"
                android:alpha="0.2"/>

            <TextView
                android:id="@+id/tv_edit_profile_menu"
                style="@style/SettingsItemStyle"
                android:text="Edit Profile"
                app:drawableStartCompat="@drawable/ic_edit"
                app:drawableEndCompat="@drawable/ic_arrow_forward" />

            <TextView
                android:id="@+id/tv_settings_menu"
                style="@style/SettingsItemStyle"
                android:text="Settings"
                app:drawableStartCompat="@drawable/ic_settings"
                app:drawableEndCompat="@drawable/ic_arrow_forward" />

            <TextView
                android:id="@+id/tv_about_app_menu"
                style="@style/SettingsItemStyle"
                android:text="About App"
                app:drawableStartCompat="@drawable/ic_info"
                app:drawableEndCompat="@drawable/ic_arrow_forward" />

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:paddingVertical="12dp"
                android:backgroundTint="@color/mood_very_sad"
                android:textColor="?attr/colorOnPrimary"
                app:cornerRadius="8dp"
                android:layout_marginTop="32dp"/>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>