<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@android:color/white"
    tools:context=".ui.profile.DeleteAccountActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Hapus Akun Permanen"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anda akan menghapus semua data Jurnal, Mood, dan Akun Anda secara permanen. Tindakan ini TIDAK dapat dibatalkan."
                android:textColor="@color/mood_very_sad"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:id="@+id/tv_user_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mohon verifikasi kata sandi Anda untuk melanjutkan penghapusan akun."
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp"
                tools:text="Mohon verifikasi kata sandi Anda untuk melanjutkan penghapusan akun: email@contoh.com"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_verification_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Verifikasi Kata Sandi"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:endIconMode="password_toggle"
                android:layout_marginBottom="24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_verification_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_delete_account_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hapus Akun Saya"
                android:layout_marginTop="32dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:textColor="@color/mood_very_sad"
                android:backgroundTint="@color/mood_sad"
                android:textSize="18sp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>