<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F5F1"
    android:padding="20dp"
    tools:context=".ui.home.DashboardFragment">

    <!-- Header & Greeting -->
    <TextView
        android:id="@+id/tv_greeting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hi, Astorias!"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_mood_prompt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="How are you feeling today?"
        android:textSize="18sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_greeting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Card Mood Tracker (Menggunakan MaterialCardView) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_mood_tracker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_mood_prompt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Mood"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Pilihan Emoji Mood (5 Pilihan) -->
            <LinearLayout
                android:id="@+id/mood_selection_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:baselineAligned="false">

                <!-- Placeholder untuk 5 emoji: -->
                <ImageView
                    android:id="@+id/iv_mood_happy_extreme"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_mood_happy_extreme"
                    android:alpha="0.5"
                    android:contentDescription="Very Happy Mood" />

                <ImageView
                    android:id="@+id/iv_mood_happy"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_mood_happy"
                    android:alpha="0.5"
                    android:contentDescription="Happy Mood" />

                <ImageView
                    android:id="@+id/iv_mood_neutral"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_mood_neutral"
                    android:alpha="0.5"
                    android:contentDescription="Neutral Mood" />

                <ImageView
                    android:id="@+id/iv_mood_sad"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_mood_sad"
                    android:alpha="0.5"
                    android:contentDescription="Sad Mood" />

                <ImageView
                    android:id="@+id/iv_mood_sad_extreme"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_mood_sad_extreme"
                    android:alpha="0.5"
                    android:contentDescription="Very Sad Mood" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <!-- Mood History Link -->
            <TextView
                android:id="@+id/tv_mood_history_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mood History >"
                android:textStyle="bold"
                android:textColor="@color/design_default_color_primary"
                android:layout_gravity="end"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Card Today's Quotes (Menggunakan MaterialCardView) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_quotes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/card_mood_tracker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Quotes"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_quote_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_quote"
                android:textSize="16sp"
                android:textStyle="italic"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_quote_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€” Harold H. Bloomfield"
                android:gravity="end"
                android:layout_marginTop="8dp"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>